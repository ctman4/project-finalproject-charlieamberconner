    <body>
      <%- include('../navbar', {active: 'users'}); -%>

            <main class="p-3">
              <%_ if (!user) { -%>
                <form>
                  <input type="text" name="id">
                  <button type="submit">Login</button>
                </form>
                <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
                <script> // Log in
                $('form').on('submit', function(event) {
                  const form = $(this);
                  event.preventDefault();
                  $.ajax({method: 'post', url: '/login', data: form.serialize()})
                  .done(() => window.location.reload())
                  .fail(error => alert('Could not log in.'));
                })
                </script>
              <%_ } else { -%>
                <div class="row">
                  <div class="mr-2 col-auto p-3 border-left">
                      <img class="rounded-circle" width="175" src="https://picsum.photos/50/50" alt="">
                  </div>
                  <div class="col pt-3">
                    <h2><%= user.Name -%></h2>
                    <p>@<%= user._id -%></p>
                    <p><b>Location: </b><%= user.location -%></p>
                    <p><b>Phone Number: </b><%= user.phone -%></p>
                  </div>
                </div>
              <%_ } -%>
            </main>

    </body>
