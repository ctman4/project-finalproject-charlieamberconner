<!DOCTYPE html>
<html>
  <%- include('./head'); -%>

    <body>
            <main class="p-3">
                <p> Hello, welcome to the Grocery Lists site! Login to your account or sign up below.<p>
                <form>
                  <input type="text" name="id">
                  <button type="submit">Login</button>
                  <button type="button" id="create">Create an account</button>
                </form>
            </main>
                <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
                <script> // Log in
                $('form').on('submit', function(event) {
                  const form = $(this);
                  event.preventDefault();
                  $.ajax({method: 'post', url: '/login', data: form.serialize()})
                  .done(() => window.location.replace('/lists'))
                  .fail(error => alert('Could not log in.'));
                })
                $('#create').on('click', function(event) {
                  const form = $(this);
                  event.preventDefault();
                  window.location.assign('create');
                })
                </script>
        </body>
    </html>
