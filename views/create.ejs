<!DOCTYPE html>
<html>
  <%- include('./head'); -%>

        <body>
          <p class="lead p-3">Create Your Account:</p>
            <main class="p-3">
                <div class="jumbotron jumbotron-fluid">
                  <div class="container">
                    <h1 class="display-4 mx-auto" style="width: 300px;">Create Your Account</h1>
                  </div>
                </div>
                <form class="text-center">

                  <label for="name">Name:</label><br>
                  <input type="text" id="name" name="name"><br>

                  <label for="id">ID:</label><br>
                  <input type="text" id="id" name="_id"><br>

                  <label for="location">Location:</label><br>
                  <input type="text" id="location" name="location"><br>

                  <label for="phone">Phone Number:</label><br>
                  <input type="text" id="phone" name="phone"><br>

                  <button class="create m-3">Done</button>

                </form>
            </main>
                <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
                <script>
                $(document).on('click', '.create', function(event) {
                  const form = $(this).closest('form');
                  event.preventDefault();

                  $.ajax({method: 'post', url: '/users', data: form.serialize()})
                    .done(() => window.location.replace('/'))
                    .fail(error => alert(error.responseText));
                  })
                </script>
              </body>
            </html>
