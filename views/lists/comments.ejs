<html>
  <table>
    <thead><h4 class="pl-0 border-bottom">Comments:</h4></thead>
    <tr> <%= li.customerID -%> </tr>
    <%_ for (const com of comments) { -%>
      <tr class="mt=2">
        <th scope="row"> </th>
        <td><%= com.text -%></td>
      </tr>
    <%_ } -%>
  </table>
  <form>
    <div class="input-group mt-3">
      <input type="text" class="form-control">
      <div class="input-group-append">
        <button type="submit" class="input-group-text">Comment</button>
      </div>
    </div>
  </form>
</html>
