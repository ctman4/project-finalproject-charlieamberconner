  $(document).on('click', '.create', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();

    $.ajax({method: 'post', url: '/lists', data: form.serialize()})
      .done(() => window.location.replace('/'))
      .fail(error => alert(error.responseText));
    })

  // Update a list
  $(document).on('click', '.update', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();
    $.ajax({method: 'put', url: `/lists/${form.attr('id')}`, data: form.serialize()})
      .fail(error => alert(error.responseText));
  });

  // Delete a list
  $(document).on('click', '.delete', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();
    $.ajax({method: 'delete', url: `/lists/${form.attr('id')}`})
      .done(() => form.remove())
      .fail(error => alert(error.responseText));
  });

</script>
