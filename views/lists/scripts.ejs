<script>

  // Insert a form
  $(document).on('click', '.insert', function(event) {
    $(this).before($(`
      <form class="form-inline">
        <input type="text" name="items" class="form-control form-control-sm m-1">
      </form>
    `));
  });

  // Un-insert a list
  $(document).on('click', '.uninsert', function(event) {
    $(this).closest('form').remove();
    event.preventDefault();
  });

