<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>

  // Insert a form
  $(document).on('click', '.insert', function(event) {
    $(this).before($(`
      <form class="form-inline">
        <input type="text" name="items" class="form-control form-control-sm m-1">
        <button class="create btn btn-sm btn-primary m-1">Save</button>
        <button class="uninsert btn btn-sm btn-primary m-1">Delete</button>
      </form>
    `));
  });

  // Un-insert a list
  $(document).on('click', '.uninsert', function(event) {
    $(this).closest('form').remove();
    event.preventDefault();
  });

  // Create a list
  $(document).on('click', '.create', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();
    $.ajax({method: 'post', url: '/lists', data: form.serialize()})
      .done(function(id) {
        form.attr('id', id);
        form.find('.create').removeClass('create').addClass('update');
        form.find('.uninsert').removeClass('uninsert').addClass('delete');
      })
      .fail(error => alert(error.responseText));
  });

  // Update a list
  $(document).on('click', '.update', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();
    $.ajax({method: 'put', url: `/lists/${form.attr('id')}`, data: form.serialize()})
      .fail(error => alert(error.responseText));
  });

  // Delete a list
  $(document).on('click', '.delete', function(event) {
    const form = $(this).closest('form');
    event.preventDefault();
    $.ajax({method: 'delete', url: `/lists/${form.attr('id')}`})
      .done(() => form.remove())
      .fail(error => alert(error.responseText));
  });

</script>
